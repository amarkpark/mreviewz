<h1 style="text-align:center" class="neontitle">Reel Good Movie Reviews</h1>
<br class="clear"/>

<% @movies.each do |m| %>

  <div class="col-xs-10 col-xs-offset-1 neon-box">
    <h2><%= m.name %></h2><br />
    <row>
      <div class="col-xs-5 col-xs-offset-1"><h3>Release Year: <%= m.release_year %></h3></div>
      <div class="col-xs-5 col-xs-offset-1"><h3>Rating: <%= m.rating %></h3></div>
    </row><br />
    <br />
    <blockquote><%= m.review %></blockquote>
  </div>
  <br />

<% end %>

